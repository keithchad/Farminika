<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.farminikagroup.farminika">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Farminika"
        tools:targetApi="31">
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".data.auth.StartingScreen"
            android:exported="false" />
        <activity
            android:name=".ui.activity.DecisionScreen"
            android:exported="false" />
        <activity
            android:name=".data.auth.SignInScreen"
            android:exported="false" />
        <activity
            android:name=".data.auth.SignUpScreen"
            android:exported="true" />
        <activity
            android:name=".ui.activity.IntroScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>