<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:elevation="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/blogImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/car"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_corner_radius="10dp" />

            <TextView
                android:id="@+id/textBlogTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/ubuntu_bold"
                android:maxLines="2"
                android:textColor="@color/black"
                android:text="Why should you Invest in Agriculture in 2022 for the future."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/blogImage"
                app:layout_constraintTop_toTopOf="@+id/blogImage" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/blogImageProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/dummy_photo_1"
                app:layout_constraintBottom_toBottomOf="@+id/blogImage"
                app:layout_constraintStart_toEndOf="@+id/blogImage"
                app:layout_constraintTop_toBottomOf="@+id/textBlogTitle" />

            <TextView
                android:id="@+id/textBlogUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Keith Chad"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/blogImageProfile"
                app:layout_constraintStart_toEndOf="@+id/blogImageProfile"
                app:layout_constraintTop_toTopOf="@+id/blogImageProfile" />

            <ImageView
                android:id="@+id/imageClock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/name"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/textBlogUserName"
                app:layout_constraintStart_toEndOf="@+id/textBlogUserName"
                app:layout_constraintTop_toTopOf="@+id/textBlogUserName" />

            <TextView
                android:id="@+id/blogReadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="10 Minutes"
                android:layout_marginStart="8dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/imageClock"
                app:layout_constraintStart_toEndOf="@+id/imageClock"
                app:layout_constraintTop_toTopOf="@+id/imageClock" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>