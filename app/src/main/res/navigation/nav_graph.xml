<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.farminikagroup.farminika.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_sectorBottomSheet"
            app:destination="@id/sectorBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/blogFragment"
        android:name="com.farminikagroup.farminika.ui.fragment.BlogFragment"
        android:label="fragment_blog"
        tools:layout="@layout/fragment_blog" />
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.farminikagroup.farminika.ui.fragment.MessageFragment"
        android:label="fragment_message"
        tools:layout="@layout/fragment_message" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.farminikagroup.farminika.ui.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <dialog
        android:id="@+id/sectorBottomSheet"
        android:name="com.farminikagroup.farminika.ui.SectorBottomSheet"
        android:label="SectorBottomSheet" />
</navigation>